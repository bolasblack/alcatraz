{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$ref": "#/$defs/Config",
  "$defs": {
    "Commands": {
      "properties": {
        "up": {
          "type": "string",
          "description": "Command to run when starting the container"
        },
        "enter": {
          "type": "string",
          "description": "Command to run when entering an existing container"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Config": {
      "properties": {
        "image": {
          "type": "string",
          "description": "Container image to use"
        },
        "workdir": {
          "type": "string",
          "description": "Working directory inside container"
        },
        "runtime": {
          "type": "string",
          "enum": [
            "auto",
            "docker"
          ],
          "description": "Container runtime selection"
        },
        "commands": {
          "$ref": "#/$defs/Commands",
          "description": "Lifecycle commands"
        },
        "mounts": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "description": "Additional bind mounts (source:target[:ro])"
        },
        "resources": {
          "$ref": "#/$defs/Resources",
          "description": "Container resource limits"
        },
        "envs": {
          "additionalProperties": {
            "$ref": "#/$defs/EnvValue"
          },
          "type": "object",
          "description": "Environment variables for the container"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "image"
      ]
    },
    "EnvValue": {
      "oneOf": [
        {
          "type": "string",
          "description": "Static value or ${VAR} reference"
        },
        {
          "properties": {
            "value": {
              "type": "string",
              "description": "The value or ${VAR} reference"
            },
            "override_on_enter": {
              "type": "boolean",
              "description": "Also set at docker exec time"
            }
          },
          "additionalProperties": false,
          "type": "object"
        }
      ],
      "description": "Environment variable value (string or object with override_on_enter)"
    },
    "Resources": {
      "properties": {
        "memory": {
          "type": "string",
          "description": "Memory limit (e.g. 4g or 512m)"
        },
        "cpus": {
          "type": "integer",
          "description": "Number of CPUs to allocate"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  },
  "title": "Alcatraz Configuration",
  "description": "Configuration schema for .alca.toml"
}